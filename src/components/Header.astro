---
const navItems = [
  { name: 'Home', href: '#home' },
  { name: 'About', href: '#about' },
  { name: 'Projects', href: '#projects' },
  { name: 'Courses', href: '#courses' },
  { name: 'Contact', href: '#contact' },
];

---

<header class="fixed w-full top-0 z-50 bg-dark/80 backdrop-blur-sm" role="banner">
  <nav class="container mx-auto px-6 py-4" aria-label="Main navigation">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="#home" class="text-primary text-xl font-bold" aria-label="Juan Hernandez - Home">JH.dev</a>

      <!-- NavegaciÃ³n -->
      <div class="hidden lg:flex items-center space-x-8" id="menu-items">
        <ul class="flex lg:items-center flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-8" role="list">
          {navItems.map((item) => (
            <li role="listitem">
              <a
                href={item.href}
                class="hover:text-primary transition-colors duration-300"
                aria-label={`Navigate to ${item.name} section`}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>