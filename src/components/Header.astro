---
const navItems = [
  { name: 'Home', href: '#home' },
  { name: 'About', href: '#about' },
  { name: 'Projects', href: '#projects' },
  { name: 'Courses', href: '#courses' },
  { name: 'Contact', href: '#contact' },
];

---

<style>
  #mobile-menu {
    border: 1px solid red; /* Esto es para verificar si el contenedor existe */
    background-color: rgba(0, 0, 0, 0.5); /* Añadir un fondo para verificar visibilidad */
  }
</style>

<header class="fixed w-full top-0 z-50 bg-dark/80 backdrop-blur-sm">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="#home" class="text-primary text-xl font-bold">JH.dev</a>

      <!-- Navegación -->
      <div class="hidden lg:flex items-center space-x-8" id="menu-items">
        <ul class="flex lg:items-center flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-8">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="hover:text-primary transition-colors duration-300"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>
