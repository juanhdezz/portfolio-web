---
const navItems = [
  { name: 'Home', href: '#home' },
  { name: 'About', href: '#about' },
  { name: 'Projects', href: '#projects' },
  { name: 'Courses', href: '#courses' },
  { name: 'Blog', href: '#blog' },
  { name: 'Contact', href: '#contact' },
];

---


<header class="fixed w-full top-0 z-50 bg-light/80 dark:bg-dark/80 backdrop-blur-sm">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex justify-between items-center">
      <!-- Logo -->
      <a href="#home" class="text-primary text-xl font-bold">JH.dev</a>

      <!-- Menú hamburguesa (visible solo en móvil) -->
      <button
        id="menu-toggle"
        class="lg:hidden p-2 hover:bg-primary/10 rounded-lg transition-colors duration-300"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg
          class="w-6 h-6 menu-open"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
        <svg
          class="w-6 h-6 menu-close hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"
          />
        </svg>
      </button>

      <!-- Navegación y botón de tema -->
      <div class="hidden lg:flex items-center space-x-8" id="menu-items">
        <ul class="flex lg:items-center flex-col lg:flex-row space-y-4 lg:space-y-0 lg:space-x-8">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="hover:text-primary transition-colors duration-300"
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
        <button
          id="theme-toggle"
          class="p-2 rounded-lg bg-primary/10 hover:bg-primary/20 transition-colors duration-300"
          aria-label="Toggle theme"
        >
          <svg
            class="w-6 h-6 hidden dark:block"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            />
          </svg>
          <svg
            class="w-6 h-6 block dark:hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            />
          </svg>
        </button>
      </div>

      <!-- Menú móvil (overlay) -->
      <div
        id="mobile-menu"
        class="fixed inset-0 bg-light/95 dark:bg-dark/95 lg:hidden hidden backdrop-blur-sm"
      >
        <div class="h-full flex flex-col items-center justify-center space-y-8">
          <ul class="flex flex-col items-center space-y-6">
            {navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-xl hover:text-primary transition-colors duration-300"
                >
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
