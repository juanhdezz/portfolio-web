---
const projects = [
  {
    title: "Tu Tiempo",
    description: 'Pronóstico del tiempo en cualquier ciudad que elijas',
    tech: ['React', 'OpenWeather API', 'JavaScript', 'CSS3'],
    image: '/projects/tutiempo.jpg',
    link: 'https://juanhdezz.github.io/app_tiempo/'
  },
  {
    title: 'RecipeScraper',
    description: 'Aplicación Python de web scrapping de recetas de cocina.',
    tech: ['Python', 'BeautifulSoup', 'WebScrapping', 'Flask'],
    image: '/projects/RecipeScrapper.jpg',
    link: 'https://github.com/juanhdezz/recetas'
  },
  {
    title: 'RoomRadar',
    description: 'Aplicación web para comparar precios de hoteles de Airbnb y Google Travel.',
    tech: ['Python', 'Selenium', 'WebScrapping', 'Flask'],
    image: '/projects/capRoomRadar.jpg',
    link: 'https://github.com/juanhdezz/RoomRadar-Scrapper'
  },
  {
    title: 'Fraud Detection in Credit Transactions',
    description: 'Aplicación basada en machine learning para detectar transacciones fraudulentas.Encuentra el informe del Análisis en mi repo de GitHub 😄',
    tech: ['Python', 'Jupyter Notebooks', 'Pandas', 'Scikit-learn', 'Matplotlib', 'Seaborn', ' numpy'],
    image: '/projects/creditfraud.jpg',
    link: 'https://github.com/juanhdezz/Fraud_detection_analytics_project'
  }
];

---

<section id="projects" class="py-20">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold mb-12 text-center" data-aos="fade-up">
      <span class="text-primary">&lt;</span>
      Projects
      <span class="text-primary">/&gt;</span>
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project, index) => (
        <div
          class="bg-dark/50 p-6 rounded-lg border border-primary/20 hover:border-primary/50 transition-all duration-300"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <!-- Imagen del proyecto -->
          <div class="mb-4">
            <img
              src={project.image}
              alt={project.title}
              class="w-full h-56 object-cover rounded-lg shadow-lg"
            />
          </div>
          <!-- Detalles del proyecto -->
          <h3 class="text-xl font-bold mb-4">{project.title}</h3>
          <p class="text-light/70 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tech.map((tech) => (
              <span class="bg-primary/10 text-primary px-3 py-1 rounded-full text-sm">
                {tech}
              </span>
            ))}
          </div>
          <a
            href={project.link}
            class="text-primary hover:underline inline-flex items-center"
            target="_blank"
            rel="noopener noreferrer"
          >
            View Project 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
